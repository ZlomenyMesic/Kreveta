<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ApplicationIcon>..\Resources\images\KrevetaLogo.ico</ApplicationIcon>
	<LangVersion>13.0</LangVersion>
    <RootNamespace>Kreveta</RootNamespace>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <SignAssembly>False</SignAssembly>
    <AnalysisLevel>latest-all</AnalysisLevel>
    <Optimize>True</Optimize>
    
    <PlatformTarget>x64</PlatformTarget>
    <Prefer32Bit>False</Prefer32Bit>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\Resources\slider_tables.bin">
      <LogicalName>slider_tables.bin</LogicalName>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.14.0" />
    <PackageReference Include="BenchmarkDotNet.Annotations" Version="0.14.0" />
    <PackageReference Include="HasFlagExtension" Version="1.1.0.3" />
    <PackageReference Include="NeoKolors.Common" Version="0.25.16" />
    <PackageReference Include="NeoKolors.Console" Version="0.25.16" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Resources\images\KrevetaLogo.ico">
      <Link>KrevetaLogo.ico</Link>
    </None>
    <None Include="..\Resources\KrevetaLogo.ico">
      <Link>KrevetaLogo.ico</Link>
    </None>
  </ItemGroup>

</Project>
